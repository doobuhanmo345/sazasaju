rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. [신규] 비회원 퍼널 분석 및 대기열 수집 (쓰기 전용)
    match /paywall_funnel_logs/{docId} { allow create: if true; }
    match /paywall_waitlist/{docId} { allow create: if true; }
    match /paywall_analytics/{docId} { allow create: if true; }
    
    match /sazatalkad_logs/{docId} { 
      allow read, create, update: if true; 
    }
    match /sazatalk_funnel_logs/{docId} { allow create: if true; }
    match /newyearad_funnel_logs/{docId} { allow read, create, update: if true; }
    match /newyearad_logs/{docId} { allow read, create, update: if true; }
    match /copy_url_logs/{docId} { allow create: if true; }
    match /menu_click_logs/{docId} { allow create: if true; }
        
    // 2. [기존] 광고 리드 수집 규칙
    match /ad_leads/{leadId} {
      allow create: if true;
      allow read, update: if false; 
    }

    // [신규] 알림 컬렉션 규칙
    match /notifications/{notificationId} {
      allow read, update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        (resource.data.targetRole == 'admin' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin']) ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin']
      );
      allow create: if request.auth != null && (
        request.resource.data.userId == request.auth.uid || 
        request.resource.data.targetRole == 'admin'
      );
    }

    // 3. [기존] 로그인 유저 전용 규칙 (수정됨: 서브컬렉션 허용)
    match /users/{userId} {
      allow read, write: if request.auth != null && (
        request.auth.uid == userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin']
      );

      // [추가] 서브컬렉션(saved_profiles 등)에 대해서도 본인 권한 허용
      match /{subCollection}/{document=**} {
        allow read, write: if request.auth != null && (
            request.auth.uid == userId ||
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin']
        );
      }
    }
    
    // [신규] 명리학자 신청 관리
    match /consultant_applications/{docId} {
      allow read, write: if request.auth != null && (
          request.auth.uid == resource.data.uid ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin']
      );
      allow create: if request.auth != null;
    }

    // [신규] 비동기 분석 큐 (Background Analysis Queue)
    match /analysis_queue/{docId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update, delete: if true;
    }
    

    // [신규] 메시지 컬렉션 규칙
    match /direct_messages/{messageId} {
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
      allow read: if request.auth != null && (
        resource.data.senderId == request.auth.uid || 
        resource.data.receiverId == request.auth.uid ||
        resource.data.receiverId == 'admin'
      );
      allow update: if request.auth != null && (
        resource.data.receiverId == request.auth.uid ||
        resource.data.receiverId == 'admin'
      );
    }
    
    // 보안을 위해 그 외 모든 접근은 기본적으로 차단
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
