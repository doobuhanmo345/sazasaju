rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }

    // 1. [신규] 비회원 퍼널 분석 및 대기열 수집 (쓰기 전용)
    match /paywall_funnel_logs/{docId} { allow create: if true; }
    match /paywall_waitlist/{docId} { allow create: if true; }
    match /paywall_analytics/{docId} { allow create: if true; }

    // [New] Settings collection (Public Read for Maintenance Mode)
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /sazatalkad_logs/{docId} { 
      allow read, create, update: if true; 
    }
    match /sazatalk_funnel_logs/{docId} { allow create: if true; }
    match /newyearad_funnel_logs/{docId} { allow read, create, update: if true; }
    match /newyearad_logs/{docId} { allow read, create, update: if true; }
    match /copy_url_logs/{docId} { allow create: if true; }
    match /menu_click_logs/{docId} { allow create: if true; }
        
    // 2. [기존] 광고 리드 수집 규칙
    match /ad_leads/{leadId} {
      allow create: if true;
      allow read, update: if false; 
    }

    // [신규] 알림 컬렉션 규칙
    match /notifications/{notificationId} {
      allow read, update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid || 
        resource.data.targetRole == 'admin' ||
        isAdmin()
      );
      allow create: if request.auth != null && (
        request.resource.data.userId == request.auth.uid || 
        request.resource.data.targetRole == 'admin' ||
        isAdmin()
      );
    }

    // 3. [기존] 로그인 유저 전용 규칙
    match /users/{userId} {
      allow read, write: if request.auth != null && (
        request.auth.uid == userId ||
        isAdmin()
      );

      match /{subCollection}/{document=**} {
        allow read, write: if request.auth != null && (
            request.auth.uid == userId ||
            isAdmin()
        );
      }
    }
    
    // [신규] 명리학자 신청 관리
    match /consultant_applications/{docId} {
      allow read, write: if request.auth != null && (
          request.auth.uid == resource.data.uid ||
          isAdmin()
      );
      allow create: if request.auth != null;
    }

    // [신규] 비동기 분석 큐
    match /analysis_queue/{docId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update, delete: if true;
    }
    
    // [신규] 사자톡 메시지 컬렉션 규칙
    match /sazatalk_messages/{messageId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && 
        resource.data.userId == request.auth.uid &&
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isSaved', 'isRead']);
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // [신규] 메시지 컬렉션 규칙
    match /direct_messages/{messageId} {
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
      allow read: if request.auth != null && (
        resource.data.senderId == request.auth.uid || 
        resource.data.receiverId == request.auth.uid ||
        resource.data.receiverId == 'admin' ||
        isAdmin()
      );
      allow update: if request.auth != null && (
        resource.data.senderId == request.auth.uid ||
        resource.data.receiverId == request.auth.uid ||
        resource.data.receiverId == 'admin' ||
        isAdmin()
      );
      allow delete: if isAdmin();
    }
    
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
